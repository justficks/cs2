sensitivity 1.6

# Прицел
# Стиль прицела (классический статический)
# Прицел зависит от оружия = false
# Следовать за отдачей = false
cl_crosshair_drawoutline 1
cl_crosshairsize 1
cl_crosshairalpha 255
cl_crosshairthickness 0.5
cl_crosshairgap -2

# Радар
cl_radar_always_centered 0
# Ширина
# Приближение

# Вид
# Левая рука = true
viewmodel_presetpos 3

# Гранаты
bind c slot8
bind z slot10
bind mouse4 slot

# Drop бомбы
bind N "slot3; slot5; drop"

# Быстрая смена оружия
alias quickswitch1 "slot1; bind Q quickswitch2"
alias quickswitch2 "slot2; bind Q quickswitch1"
bind Q "quickswitch2"

# Jump Throw
alias "+jumpaction" "+jump;"
alias "+throwaction" "-attack; -attack2"
alias "-jumpaction" "-jump"
bind V "+jumpaction;+throwaction;"

# Run Jump Throw
alias "+forwardjumpthrow" "+forward;+jump;-attack"
alias "-forwardjumpthrow" "-jump;-forward"
bind H "+forwardjumpthrow"


