// Чувствительность мыши при 400 dpi
sensitivity 1.6

// Прыжок на колесо мыши
bind mwheeldown "+jump;bind mwheelup +jump;bind space +jump"

// Прицел
cl_crosshair_recoil false
cl_crosshair_drawoutline 1
cl_crosshairstyle 1
cl_crosshairsize 1
cl_crosshairalpha 255
cl_crosshairthickness 0.5
cl_crosshairgap -2
cl_crosshair_dynamic_splitdist 2

// Радар
cl_hud_radar_scale 1.2
cl_radar_always_centered 0
cl_radar_scale 0.4
cl_radar_rotate 1
cl_radar_icon_scale_min 0.5
bind alt "incrementvar cl_radar_scale 0 1 0.25" // Приближение - отдаление по кнопке

// Вид
viewmodel_presetpos 3

// Гранаты
bind c slot8
bind z slot10
bind mouse4 slot

// Drop бомбы
bind n "slot3; slot5; drop"

// Быстрая смена оружия
alias quickswitch1 "slot1; bind Q quickswitch2"
alias quickswitch2 "slot2; bind Q quickswitch1"
bind "q" "quickswitch2"

// Jump Throw
alias "+bish" "+jump"
alias "+bash" "-attack; -attack2"
alias "+bosh" "-jump"
bind v "+bish; +bash; +bosh"

// Run Jump Throw
alias "+runjumpthrow" "+forward;+jump;-attack"
alias "-runjumpthrow" "-jump;-forward"
bind h "+runjumpthrow"
