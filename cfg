// Чувствительность мыши при 400 dpi
sensitivity 2

// Прыжок на колесо мыши
bind mwheeldown "+jump;bind mwheelup +jump;bind space +jump"

// Прицел
cl_crosshair_recoil false
cl_crosshair_drawoutline 0
cl_crosshairstyle 4
cl_crosshairsize 1.5
cl_crosshairalpha 255
cl_crosshairthickness 0.5
cl_crosshairgap -3
cl_crosshair_dynamic_splitdist 2

// Радар
cl_hud_radar_scale 1.2
cl_radar_always_centered 0
cl_radar_scale 0.4
cl_radar_rotate 1
cl_radar_icon_scale_min 0.5
bind alt "incrementvar cl_radar_scale 0.4 0.8 0.3" // Приближение - отдаление по кнопке

// Вид
viewmodel_presetpos 3

// Гранаты
bind c slot8
bind z slot10
bind mouse4 slot7


// Jump Throw & Run Jump Throw
alias "+ju" "+jump"
alias "+ja" "-attack; -attack2"
alias "+jum" "-jump"
bind v "+ju; +ja; +jum"

alias "+wthrow" "+forward;+jump;"
alias "-wthrow" "-jump;-forward"
bind h "+wthrow; +ja"
